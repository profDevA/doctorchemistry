/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<div class="rk-form-currency">
<label><?php echo $this->__('Currency:')?></label>
<div class="drop-currency">
	
    <div class="currency-trigger">
        <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
            <?php if($_code == $this->getCurrentCurrencyCode()): ?>
            <span class="level-0 select-lang"><?php echo $_name ?><i class="fa fa-caret-down"></i></span>
            <?php endif?>
            <?php endforeach; ?>
            <ul class="sub-currency">
            <?php foreach ($this->getCurrencies() as $_code => $_name): ?>
                    <li>
                        <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>" onclick="setLocation(this.value);">
                        <?php echo $_name ?>
                        </a>
                    </li>
                
            <?php endforeach; ?>
            </ul>
    </div>
</div>
</div>
<?php endif; ?>

<script type="text/javascript">
    $jq(document).ready(function(){
        
        
        $jq('.currency-trigger').mouseenter(function() {
            $jq(this).find(".sub-currency").stop(true, true).slideDown();
        });
        //hide submenus on exit
        $jq('.currency-trigger').mouseleave(function() {
            $jq(this).find(".sub-currency").stop(true, true).slideUp();
        });
    });
</script>