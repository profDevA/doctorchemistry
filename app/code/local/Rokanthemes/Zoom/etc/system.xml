<?xml version="1.0"?>
<config>
	<tabs>
		<rokanthemes translate="label" module="zoom">
			<label>Rokanthemes</label>
			<sort_order>205</sort_order>
		</rokanthemes>
	</tabs>
	<sections>
		<zoom translate="label" module="zoom">
			<label>Zoom</label>
			<tab>rokanthemes</tab>
			<sort_order>180</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<zoom_config translate="label">
					<label>Zoom Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled translate="label comment">
							<label>Enabled Module: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</enabled>
						<zoom_w translate="label comment">
							<label>Width of Zoom Panel: </label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</zoom_w>
						<zoom_h translate="label comment">
							<label>Height of Zoom Panel: </label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</zoom_h>
						<zoom_border_w translate="label comment">
							<label>Border Width of Zoom Panel: </label>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</zoom_border_w>
						<zoom_border_color translate="label comment">
							<label>Border Color of Zoom Panel: </label>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</zoom_border_color>
						
						<lightbox_w translate="label comment">
							<label>Width of Lightbox Image: </label>
							<frontend_type>text</frontend_type>
							<sort_order>11</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</lightbox_w>
						<lightbox_h translate="label comment">
							<label>Height of Lightbox Image: </label>
							<frontend_type>text</frontend_type>
							<sort_order>13</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</lightbox_h>
						<enabled_thumbnail translate="label comment">
							<label>Enabled Thumbnail Scroller: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>14</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</enabled_thumbnail>
						<auto_scroll translate="label comment">
							<label>Auto Thumbnail Scroller: </label>
							<frontend_type>select</frontend_type>
							<source_model>
								adminhtml/system_config_source_yesno
							</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
						</auto_scroll>
						<scroll_style translate="label">
                            <label>Scroll Style: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								zoom/config_style
							</source_model>
                            <sort_order>16</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scroll_style>
						<thumbnail_qty translate="label comment">
							<label>Number Thumbnail Display: </label>
							<frontend_type>text</frontend_type>
							<sort_order>17</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</thumbnail_qty>
						<thumbnail_w translate="label comment">
							<label>Width of Thumbnail: </label>
							<frontend_type>text</frontend_type>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</thumbnail_w>
						<thumbnail_h translate="label comment">
							<label>Height of Thumbnail: </label>
							<frontend_type>text</frontend_type>
							<sort_order>22</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_store>1</show_in_store>
							<show_in_website>1</show_in_website>
						</thumbnail_h>
					</fields>
				</zoom_config>						
			</groups>
		</zoom>
	</sections>
</config>


